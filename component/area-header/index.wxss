/* component/area-header/index.wxss */
.recommend-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.right .slot:empty + .default {
  display: flex;
}

.default {
  display: none;
  align-items: center;
}

.right-text {
  font-size: 28rpx;
}

.ico {
  width: 40rpx;
  height: 40rpx;
}