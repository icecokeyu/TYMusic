/* pages/home-music/childComps/peak-list-item/index.wxss */
.peak-list-item {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
  border-radius: 10rpx;
  overflow: hidden;
  transform: translateY(0);
}

.item-left {
  flex: 1;
  height: 99px;
  background-color: #eeeeee;
  padding-left: 20rpx;
  height: 220rpx;
}

.item-right {
  position: relative;
  width: 220rpx;
  height: 220rpx;
}

.name {
  font-size: 36rpx;
}

.item-song {
  margin-top: 10rpx;
  font-size: 24rpx;
  display: inline-block;
  /* white-space: nowrap;  */
  width: 100%; 
  overflow: hidden; 
  text-overflow:ellipsis;
}

.img {
  width: 100%;
  height: 100%;
}

.item-playCount {
  position: absolute;
  right: 2rpx;
  bottom: 10rpx;
  padding: 4rpx;
  background-color: rgb(0, 0, 0, 0.3);
  font-size: 24rpx;
}